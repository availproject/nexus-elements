{
  "name": "@avail-project/nexus-elements",
  "version": "0.0.1",
  "description": "React components for Avail Nexus",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "decocereus<amartya@availproject.org>",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css",
    "./unified-balance": {
      "import": {
        "types": "./dist/unified-balance.d.ts",
        "default": "./dist/unified-balance.js"
      },
      "require": {
        "types": "./dist/unified-balance.d.cts",
        "default": "./dist/unified-balance.cjs"
      }
    },
    "./fast-bridge": {
      "import": {
        "types": "./dist/fast-bridge.d.ts",
        "default": "./dist/fast-bridge.js"
      },
      "require": {
        "types": "./dist/fast-bridge.d.cts",
        "default": "./dist/fast-bridge.cjs"
      }
    },
    "./fast-transfer": {
      "import": {
        "types": "./dist/fast-transfer.d.ts",
        "default": "./dist/fast-transfer.js"
      },
      "require": {
        "types": "./dist/fast-transfer.d.cts",
        "default": "./dist/fast-transfer.cjs"
      }
    },
    "./deposit": {
      "import": {
        "types": "./dist/deposit.d.ts",
        "default": "./dist/deposit.js"
      },
      "require": {
        "types": "./dist/deposit.d.cts",
        "default": "./dist/deposit.cjs"
      }
    },
    "./swaps": {
      "import": {
        "types": "./dist/swaps.d.ts",
        "default": "./dist/swaps.js"
      },
      "require": {
        "types": "./dist/swaps.d.cts",
        "default": "./dist/swaps.cjs"
      }
    },
    "./view-history": {
      "import": {
        "types": "./dist/view-history.d.ts",
        "default": "./dist/view-history.js"
      },
      "require": {
        "types": "./dist/view-history.d.cts",
        "default": "./dist/view-history.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "vite build && pnpm build:css",
    "build:css": "postcss src/styles/index.css -o dist/styles.css",
    "dev": "vite build --watch"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@avail-project/nexus-core": "1.0.0-beta.56",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.0",
    "postcss": "^8.5.0",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/availproject/nexus-elements"
  },
  "license": "MIT",
  "keywords": [
    "avail",
    "nexus",
    "react",
    "components",
    "web3",
    "bridge"
  ]
}
