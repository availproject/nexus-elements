{
  "name": "nexus-elements-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter docs dev",
    "build": "pnpm --filter docs build",
    "build:elements": "pnpm --filter @avail-project/nexus-elements build",
    "lint": "pnpm --filter docs lint",
    "test-tarball": "pnpm --filter @avail-project/nexus-elements build && cd packages/elements && pnpm pack",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build:elements && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0"
  },
  "dependencies": {
    "@avail-project/nexus-core": "github:availproject/nexus-sdk#develop"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.2",
      "@types/react-dom": "19.1.2",
      "@avail-project/nexus-core": "github:availproject/nexus-sdk#develop"
    }
  }
}
